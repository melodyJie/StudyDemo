{
  "name": "melody-study-demo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "melodyJie",
  "scripts": {
    "boot": "lerna bootstrap",
    "publish": "lerna publish",
    "release": "standard-version --commitAll",
    "release:target": "npm run release -- --release-as",
    "release:patch": "npm run release:target patch",
    "release:minor": "npm run release:target minor",
    "release:major": "npm run release:target major",
    "release:alpha": "npm run release -- --prerelease alpha",
    "release:beta": "npm run release -- --prerelease beta",
    "lint": "eslint --cache --cache-location=.cache/eslint --ext .ts,.tsx --report-unused-disable-directives packages/",
    "lint:fix": "npm run lint -- --fix"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "lerna run build",
      "precommit": "git add packages/*/package.json"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ],
    "*.ts": [
      "npm run lint:fix",
      "git add"
    ],
    "*.tsx": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "examples",
    "dist",
    "lib",
    "config",
    "babel.config.js",
    "jest.config.js",
    "commitlint.config.js",
    "*.js"
  ],
  "dependencies": {
    "lerna": "^4.0.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@commitlint/config-angular": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "commitizen": "^3.1.0",
    "commitlint": "^8.1.0",
    "eslint": "7.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "express": "^4.17.1",
    "husky": "^4.3.8",
    "lint-staged": "^9.2.5",
    "prettier": "^2.3.1",
    "standard-version": "^9.3.0"
  }
}
